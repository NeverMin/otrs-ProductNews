<div class="MainBox ARIARoleMain">
    <div class="ClearLeft"></div>
    <div class="Headline">
        <h1 title="$QData{"Headline"}">$QData{"Headline"}</h1>
        <div class="AdditionalInformation">
            $QData{"CreateTime"} - $QData{"Author"}
        </div>
    </div>

    <div class="ContentColumn">
        <div class="ActionRow">
            <p>
                <h3>$QData{"Teaser"}</h3>
            </p>
        </div>

        <p>
            $Data{"Body"}
        </p>

    </div>
    <div class="Clear"></div>
</div>
